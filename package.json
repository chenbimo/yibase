{
    "name": "yibase",
    "version": "2.0.1",
    "description": "vue3 + vite + yite-cli 基础项目开发模板",
    "sideEffects": true,
    "type": "module",
    "private": false,
    "license": "Apache-2.0",
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "scripts": {
        "lint": "eslint ./src",
        "fix": "eslint ./src --fix",
        "format": "prettier --write .",
        "inspect": "eslint --inspect-config",
        "dev": "yite --command=dev --envfile=development --workdir=./",
        "build": "yite --command=build --envfile=production --workdir=./"
    },
    "files": [
        ".vscode",
        "public/",
        "src/",
        ".gitignore",
        ".npmrc",
        ".prettier",
        "eslint.config.js",
        "index.html",
        "jsconfig.json",
        "LICENSE",
        "package.json",
        "README.md",
        "yite.config.js"
    ],
    "keywords": [
        "lodash",
        "utils",
        "helper",
        "help"
    ],
    "author": "chensuiyi <bimostyle@qq.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/chenbimo/yibase.git"
    },
    "homepage": "https://chensuiyi.me",
    "dependencies": {
        "@iconify/json": "^2.2.235",
        "axios": "^1.7.3",
        "pinia": "^2.2.1",
        "sass": "^1.77.8",
        "store2": "^2.14.3",
        "vue": "^3.4.37",
        "vue-i18n": "^9.13.1",
        "vue-router": "^4.4.3"
    },
    "devDependencies": {
        "@eslint/config-inspector": "^0.5.2",
        "@eslint/js": "^9.8.0",
        "eslint": "^9.8.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-vue": "^9.27.0",
        "globals": "^15.9.0",
        "lint-staged": "^15.2.8",
        "prettier": "^3.3.3",
        "simple-git-hooks": "^2.11.1",
        "yite-cli": "^3.3.0"
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm exec lint-staged"
    },
    "lint-staged": {
        "*": [
            "prettier --write --cache --ignore-unknown"
        ]
    }
}
